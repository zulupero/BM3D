#include <stdio.h>
#include <cuda.h>
#include <cuda_runtime_api.h>

int main()
{
    int nDevices;
    cudaGetDeviceCount(&nDevices);

    for(int i=0; i < nDevices; ++i)
    {
	cudaDeviceProp prop;
        cudaGetDeviceProperties(&prop,i);
        printf("Device number: %d\n", i);
        printf("Device name: %s\n", prop.name);
        printf("Memory clock rate: %d\n", prop.memoryClockRate);
        printf("Memory bus with (bits): %d\n", prop.memoryBusWidth);
        printf("Peak memory bandwith (Gb/s): %f\n", 2.0 * prop.memoryClockRate*(prop.memoryBusWidth/8)/1.0e6);
	printf("max threads per block: %d\n", prop.maxThreadsPerBlock);
	printf("total Global Memory: %u\n", prop.totalGlobalMem);
	printf("Warp size: %d", prop.warpSize); 
    }
}
